<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
  fx:controller="jala.university.chatcapstone.view.ChatPageController"
  prefHeight="400.0" prefWidth="600.0"
>
  <TextField fx:id="messageInput" layoutX="10.0" layoutY="300.0" prefWidth="280.0"
    promptText="Enter message..."/>

  <Button fx:id="sendButton" layoutX="300.0" layoutY="300.0" text="Send"
    onAction="#handleSendMessage"/>

  <ListView fx:id="messageListView" layoutX="10.0" layoutY="10.0" prefHeight="280.0" prefWidth="360.0"/>
</AnchorPane>
